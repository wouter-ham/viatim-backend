{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "config": {
    "knex": {
      "command": "npx ts-node ./node_modules/.bin/knex --client=postgres --connection=$DATABASE_URL --cwd=/app/database --migrations-directory=./migrations"
    }
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:templates": "cp -Rf assets ./dist/templates",
    "build:database": "tsc --allowSyntheticDefaultImports true --esModuleInterop true --skipLibCheck true --outDir ./dist/database ./database/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix --max-warnings=0",
    "knex:cli": "docker compose exec main /bin/ash -c \"$npm_package_config_knex_command \\$@\" -- $@",
    "knex:migrate:make": "npm run knex:cli -- migrate:make -x ts --stub migrations.stub $@",
    "knex:migrate:latest": "npm run knex:cli -- migrate:latest",
    "knex:migrate:rollback": "npm run knex:cli -- migrate:rollback",
    "knex:seed:make": "npm run knex:cli -- seed:make -x ts $@",
    "knex:resetdb": "npm run knex:cli migrate:rollback && npm run knex:cli migrate:latest && npm run knex:cli seed:run"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.3",
    "@nestjs/core": "^10.3.3",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/platform-socket.io": "^10.3.3",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "handlebars": "^4.7.8",
    "jwt-decode": "^4.0.0",
    "knex": "^3.1.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.45",
    "nodemailer": "^6.9.12",
    "nodemailer-express-handlebars": "^6.1.2",
    "objection": "^3.1.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.1",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "semver": "^7.6.0",
    "sharp": "^0.33.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.27",
    "@types/nodemailer": "^6.4.14",
    "@types/nodemailer-express-handlebars": "^4.0.5",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/semver": "^7.5.8",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.2"
  }
}
